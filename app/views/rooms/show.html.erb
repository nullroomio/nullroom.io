<div
  class="max-w-md w-full min-h-screen bg-gray-900 flex flex-col"
  data-controller="room"
  data-room-room-id-value="<%= @room_id %>"
  data-room-turn-servers-value="<%= @ice_servers.to_json %>"
>
  <!-- Top Bar: Status & Timer -->
  <div class="bg-gray-800 border-b border-gray-700 px-4 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <!-- Status Indicator -->
      <div class="flex items-center space-x-2">
        <div
          data-room-target="statusDot"
          class="w-3 h-3 rounded-full bg-yellow-500 animate-pulse"
        ></div>
        <span
          data-room-target="statusText"
          class="text-xs font-mono text-yellow-400"
        >
          ğŸ”„ Signaling...
        </span>
      </div>
    </div>

    <!-- Timer -->
    <div class="flex items-center space-x-2">
      <span class="text-xs font-mono text-gray-400">â±ï¸</span>
      <span
        data-room-target="timerDisplay"
        class="font-mono text-sm text-gray-300 w-12 text-right"
      >
        30:00
      </span>
    </div>
  </div>

  <!-- Share Section -->
  <div class="bg-gray-800 border-b border-gray-700 px-4 py-4">
    <p class="text-xs font-mono text-gray-500 mb-2">ğŸ“¤ Share this link (encryption key is in the #)</p>
    <div class="flex items-center space-x-2">
      <input
        data-room-target="shareLink"
        type="text"
        readonly
        value="<%= request.url %>"
        class="flex-1 px-3 py-2 bg-gray-900 border border-gray-700 text-gray-300 text-xs font-mono focus:outline-none focus:border-green-500"
      />
      <button
        data-action="room#copyLink"
        class="px-3 py-2 bg-green-500 text-gray-900 text-xs font-mono font-semibold hover:bg-green-400 transition-colors cursor-pointer"
      >
        Copy
      </button>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col px-4 py-4 space-y-4 overflow-hidden">
    <!-- Messages Container -->
    <div
      data-room-target="messagesContainer"
      class="flex-1 overflow-y-auto space-y-2 bg-gray-900 border border-gray-700 p-3"
      style="border-radius: 2px;"
    >
      <p data-room-target="waitingPlaceholder" class="text-xs font-mono text-gray-600 text-center py-8">
        Waiting for peer connection...
      </p>
    </div>

    <!-- Room Terminated Modal (initially hidden) -->
    <div
      data-room-target="terminatedModal"
      class="hidden fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50"
    >
      <div class="bg-gray-800 border border-gray-700 p-6 max-w-sm text-center space-y-4">
        <h2 class="md:text-lg text-base font-mono font-bold text-red-400">
          ğŸ”’ Room Terminated
        </h2>
        <p class="md:text-base text-sm font-mono text-gray-300">
          One participant left. All traces are now cleared.
        </p>
        <button
          data-action="room#closeRoom"
          class="w-full px-4 py-2 bg-red-600 text-white md:text-sm text-xs font-mono font-semibold hover:bg-red-700 transition-colors"
        >
          Close
        </button>
      </div>
    </div>
  </div>

  <!-- Message Input -->
  <div class="bg-gray-800 border-t border-gray-700 px-4 py-3 flex space-x-2">
    <input
      data-room-target="messageInput"
      type="text"
      placeholder="Type a message..."
      disabled
      class="flex-1 px-3 py-2 bg-gray-900 border border-gray-700 text-gray-300 text-sm font-mono placeholder-gray-600 focus:outline-none focus:border-green-500 disabled:opacity-50 disabled:cursor-not-allowed"
      data-action="keydown.enter->room#sendMessage"
    />
    <button
      data-room-target="sendButton"
      data-action="room#sendMessage"
      disabled
      class="px-4 py-2 bg-green-500 text-gray-900 text-xs font-mono font-semibold hover:bg-green-400 transition-colors disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer"
    >
      Send
    </button>
  </div>

  <!-- Error Toast (initially hidden) -->
  <div
    data-room-target="errorToast"
    class="hidden fixed bottom-4 left-4 bg-red-600 text-white px-4 py-3 text-xs font-mono rounded"
  >
    <span data-room-target="errorToastText"></span>
  </div>
</div>
