<%# Renders a Lucide-style thin-stroke SVG icon. %>
<%# Required locals: name (string) %>
<%# Optional locals: css (string, default "w-6 h-6"), title (string, for accessibility) %>
<% _name  = local_assigns[:name] %>
<% _css   = local_assigns.fetch(:css, "w-6 h-6") %>
<% _title = local_assigns.fetch(:title, nil) %>

<svg
  class="<%= _css %>"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="1.5"
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-hidden="<%= _title.nil? ? 'true' : 'false' %>"
  <% if _title %>role="img"<% end %>
>
  <% if _title %><title><%= _title %></title><% end %>

  <% if _name == "shield-off" %>
    <%# Shield with diagonal slash — No Logs %>
    <path d="M12 3L4 7v5c0 5 4 8.7 8 10 4-1.3 8-5 8-10V7L12 3z"/>
    <line x1="3" y1="3" x2="21" y2="21"/>

  <% elsif _name == "lock-e2ee" %>
    <%# Padlock with transfer arrows — E2EE %>
    <rect x="5" y="11" width="14" height="11" rx="2" ry="2"/>
    <path d="M8 11V7a4 4 0 0 1 8 0v4"/>
    <path d="M17 8h3l-2-2m0 0l-2 2"/>
    <path d="M7 16h-3l2 2m0 0l2-2"/>

  <% elsif _name == "clock" %>
    <%# Clock with return arrow — Ephemeral %>
    <circle cx="12" cy="12" r="9"/>
    <polyline points="12 7 12 12 15 15"/>
    <path d="M19.5 7A9 9 0 0 0 3.5 12"/>
    <polyline points="3.5 7 3.5 12 8.5 12"/>

  <% elsif _name == "clipboard" %>
    <%# Clipboard — copy link %>
    <rect x="8" y="2" width="8" height="4" rx="1" ry="1"/>
    <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>

  <% elsif _name == "send" %>
    <%# Send / paper-plane — send message %>
    <line x1="22" y1="2" x2="11" y2="13"/>
    <polygon points="22 2 15 22 11 13 2 9 22 2"/>

  <% elsif _name == "trash" %>
    <%# Trash bin — Destroy Room %>
    <polyline points="3 6 5 6 21 6"/>
    <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6"/>
    <path d="M10 11v6"/>
    <path d="M14 11v6"/>
    <path d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2"/>

  <% elsif _name == "sparkle" %>
    <%# 4-point star — brand mark %>
    <path d="M12 2 L13.5 10.5 L22 12 L13.5 13.5 L12 22 L10.5 13.5 L2 12 L10.5 10.5 Z"/>

  <% elsif _name == "copy-check" %>
    <%# Clipboard with tick — copy success feedback %>
    <polyline points="20 6 9 17 4 12"/>

  <% elsif _name == "eye-off" %>
    <%# Eye slash — hidden/obscured field %>
    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94"/>
    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19"/>
    <line x1="1" y1="1" x2="23" y2="23"/>

  <% elsif _name == "eye" %>
    <%# Eye — reveal field %>
    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
    <circle cx="12" cy="12" r="3"/>

  <% elsif _name == "paperclip" %>
    <%# Paperclip — file attachment / file transfer %>
    <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>

  <% end %>
</svg>
