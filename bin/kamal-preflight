#!/bin/bash
# Kamal Deployment Pre-flight Checklist Script
# Run this before your first deployment to verify everything is configured

echo "ðŸš€ Kamal Deployment Pre-flight Checklist"
echo "========================================"
echo ""

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

errors=0
warnings=0

# Check 1: config/deploy.yml exists
echo -n "âœ“ Checking if config/deploy.yml exists... "
if [ -f "config/deploy.yml" ]; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}MISSING${NC}"
    ((errors++))
fi

# Check 2: Placeholders in deploy.yml
echo -n "âœ“ Checking for placeholders in deploy.yml... "
if grep -q "YOUR_" config/deploy.yml 2>/dev/null; then
    echo -e "${YELLOW}FOUND PLACEHOLDERS${NC}"
    echo "  Please update these values in config/deploy.yml:"
    grep "YOUR_" config/deploy.yml | sed 's/^/  /'
    ((warnings++))
else
    echo -e "${GREEN}OK${NC}"
fi

# Check 3: KAMAL_REGISTRY_PASSWORD environment variable
echo -n "âœ“ Checking KAMAL_REGISTRY_PASSWORD environment variable... "
if [ -z "$KAMAL_REGISTRY_PASSWORD" ]; then
    echo -e "${RED}NOT SET${NC}"
    echo "  Run: export KAMAL_REGISTRY_PASSWORD=your_token"
    ((errors++))
else
    echo -e "${GREEN}SET${NC}"
fi

# Check 4: config/master.key exists
echo -n "âœ“ Checking if config/master.key exists... "
if [ -f "config/master.key" ]; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}MISSING${NC}"
    echo "  Run: EDITOR=nano rails credentials:edit"
    ((errors++))
fi

# Check 5: Docker is running locally
echo -n "âœ“ Checking if Docker is running locally... "
if docker info > /dev/null 2>&1; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}NOT RUNNING${NC}"
    echo "  Start Docker Desktop or run: sudo systemctl start docker"
    ((errors++))
fi

# Check 6: SSH access to server (only if IP is configured)
if ! grep -q "YOUR_HETZNER_SERVER_IP" config/deploy.yml 2>/dev/null; then
    SERVER_IP=$(grep -A 2 "servers:" config/deploy.yml | grep -E "^\s*-\s*[0-9]" | head -1 | tr -d ' -')
    if [ -n "$SERVER_IP" ]; then
        echo -n "âœ“ Checking SSH access to $SERVER_IP... "
        if timeout 5 ssh -o BatchMode=yes -o ConnectTimeout=5 root@$SERVER_IP exit 2>/dev/null; then
            echo -e "${GREEN}OK${NC}"
        else
            echo -e "${YELLOW}FAILED${NC}"
            echo "  Run: ssh-copy-id root@$SERVER_IP"
            ((warnings++))
        fi
    fi
fi

# Check 7: Kamal is installed
echo -n "âœ“ Checking if Kamal is installed... "
if command -v kamal > /dev/null 2>&1; then
    echo -e "${GREEN}OK${NC}"
elif bundle exec kamal version > /dev/null 2>&1; then
    echo -e "${GREEN}OK (via bundle)${NC}"
else
    echo -e "${RED}NOT FOUND${NC}"
    echo "  Run: bundle install"
    ((errors++))
fi

# Summary
echo ""
echo "========================================"
if [ $errors -eq 0 ] && [ $warnings -eq 0 ]; then
    echo -e "${GREEN}âœ“ All checks passed! You're ready to deploy.${NC}"
    echo ""
    echo "Next steps:"
    echo "  1. kamal server bootstrap  # First time only"
    echo "  2. kamal setup             # First time only"
    echo "  3. kamal deploy            # Deploy your app"
elif [ $errors -eq 0 ]; then
    echo -e "${YELLOW}âš  $warnings warning(s) found. Review and fix if needed.${NC}"
    echo ""
    echo "You can still proceed, but some features may not work."
else
    echo -e "${RED}âœ— $errors error(s) and $warnings warning(s) found.${NC}"
    echo ""
    echo "Please fix the errors above before deploying."
    exit 1
fi
